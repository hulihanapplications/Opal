<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
	<script type="text/javascript" src="/core/javascripts/tiny_mce/tiny_mce_popup.js"></script>
	<script type="text/javascript" src="/core/javascripts/tiny_mce/plugins/opal_image/js/dialog.js"></script>
	<%= render :partial => "shared/head" %>

</head>
<body style="background:none;">
	<div style="padding:10px">
	    <% if flash[:notice] %><div class="flash_notice"><%= flash[:notice] %></div><% end %> 		
		<ul class="plugin_tabs_horizontal"> 
			    <li><a href="#Images"><%= @plugin.title %>s</a></li>				
				<li><a href="#Upload">Upload <%= @plugin.title %></a></li> 
		</ul>			
		<div class="plugin_panes_horizontal"> 					
			<div class="plugin_box">		
			    <div id="Images">	
					<div class="images" align=left>			
						<% if @images.size > 0 %>
							<% for image in @images %>
								<div class="image">
								   <!--<a href="<%= h image.url %>"  title="<%= h image.description %>" rel="colorbox">-->
								   <a href="javascript:ImageDialog.insertOpalImage('<%= image.url %>', '<%= image.description %>')" title="Insert this image">
											<img src="<%= h image.thumb_url %>" class="thumbnail"/>
								   </a>
								   <div class="box_style_2" style="margin-top:3px">
										<%= link_to icon("zoom"), image.url, :target => "_blank", :title => "View Full Size", :class => "transparent" %>
										<% if @item %>	
											<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/delete.png\" class=\"icon\"  alt=\"Delete\" title=\"Delete\">", { :action => 'delete', :controller => "plugin_images", :id => @item.id, :image_id => image.id, :tinymce => "true"}, :confirm => "Are you sure you want to delete this #{@plugin.title}?", :class => "transparent" %>																											   	
										<% else %>
											<%= link_to "<img src=\"/themes/#{@setting[:theme]}/images/icons/delete.png\" class=\"icon\"  alt=\"Delete\" title=\"Delete\">", { :action => 'delete_image', :controller => "pages", :id => image.id}, :confirm => "Are you sure you want to delete this #{@plugin.title}?", :class => "transparent" %>										
										<% end %>										
								   </div>									   							
								</div>							
							<% end %>
							<div style="clear:both"></div>
						<% else %>	
							<div style="padding:5px;" align=center>												
								No <%= @plugin.title%>s have been uploaded yet.
							</div>
						<% end %>
					</div>
				</div>
			</div>
			<div id="Upload">								   
			  <% if @item %>
	   			<%= form_tag ({:action => 'create', :controller => "plugin_images", :id => @item.id, :tinymce => "true"} , :multipart => true) %>			 
			  <% else %>			
				<%= form_tag ({:action => 'upload_image', :controller => "pages"} , :multipart => true) %>
			  <% end %>				
				   <%= render :partial => "shared/image_upload_form" %>
				   <br>
				   <div align=center>
				   		<input type="submit" value="Upload">
				   </div>
			   </form>	
			</div>
		</div>
	</div>


</body>
</html>
